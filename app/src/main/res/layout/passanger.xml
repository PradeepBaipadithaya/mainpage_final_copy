<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_ui2"
    tools:context=".passenger_page">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="91dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Enter The Following :"
        android:textColor="@color/black"
        android:textSize="30dp"

        android:textStyle="normal|bold" />


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="400dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="255dp"

        >


        <EditText
            android:id="@+id/conductor_num"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_phone"
            android:ems="10"
            android:hint="    Bus  Number"

            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/customtextcolor"
            android:textColorHint="@color/custom_color_yellow" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="358dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="AND"
        android:textColor="@color/black"
        android:textSize="30dp"

        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp">

        <EditText
            android:id="@+id/conductor_bus_num"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:ems="10"
            android:hint="    Bus Conductor Number"
            android:inputType="number"

            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/customtextcolor"
            android:textColorHint="@color/custom_color_yellow" />

    </LinearLayout>

    <Button
        android:id="@+id/tripbtn"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="552dp"
        android:background="@drawable/shadow"
        android:fontFamily="sans-serif-black"
        android:text="Fetch  Location"
        android:textSize="12dp" />


</RelativeLayout>
